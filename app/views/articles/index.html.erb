<p id="notice"><%= notice %></p>

<div class="container">
<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Contenu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="article">
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.rich_body %></td>
        <td><%= link_to 'Voir |', article %></td>
        <td><%= link_to 'Modifier |', edit_article_path(article) %></td>
        <td><%= link_to 'Détruire', article, method: :delete, data: { confirm: '🧙‍♂️En es-tu vraiment sûr Frodon?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<div class="d-flex">
<%= link_to 'Nouvel Article', new_article_path %>
</div>
