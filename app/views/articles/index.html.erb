  <tbody class="article">
    <% @articles.each do |article| %>
      <tr>
      <div class="article-infos">
        <td><%= cl_image_tag article.photos.key, width: 400, height: 300, crop: :fill %></td>
        <h2><td><%= article.title %></td></h2>
        <td><%= article.rich_body %></td>
      </div>
      <div class="article-params">
        <td><%= link_to 'Voir |', article %></td>
        <td><%= link_to 'Modifier |', edit_article_path(article) %></td>
        <td><%= link_to 'Détruire', article, method: :delete, data: { confirm: '🧙‍♂️En es-tu vraiment sûr Frodon?' } %></td>
      </div>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>
